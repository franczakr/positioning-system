<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.BtActivity">

   <androidx.recyclerview.widget.RecyclerView
       android:id="@+id/results"
       android:layout_width="match_parent"
       android:layout_height="10dp"
       android:background="@color/gray"/>

   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="x1" />
      <SeekBar
          android:id="@+id/x1"
          android:max="100"
          android:progress="10"
          android:progressTint="@color/sliders1"
          android:thumbTint="@color/sliders1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
   </LinearLayout>

   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="y1" />
      <SeekBar
          android:id="@+id/y1"
          android:max="100"
          android:progress="10"
          android:progressTint="@color/sliders1"
          android:thumbTint="@color/sliders1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
   </LinearLayout>

   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="s1" />
      <SeekBar
          android:id="@+id/s1"
          android:max="100"
          android:progress="50"
          android:progressTint="@color/sliders1"
          android:thumbTint="@color/sliders1"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
   </LinearLayout>

   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="x2" />
      <SeekBar
          android:id="@+id/x2"
          android:max="100"
          android:progress="90"
          android:progressTint="@color/sliders2"
          android:thumbTint="@color/sliders2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
   </LinearLayout>

   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="y2" />
      <SeekBar
          android:id="@+id/y2"
          android:max="100"
          android:progress="11"
          android:progressTint="@color/sliders2"
          android:thumbTint="@color/sliders2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
   </LinearLayout>

   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="s2" />
      <SeekBar
          android:id="@+id/s2"
          android:max="100"
          android:progress="50"
          android:progressTint="@color/sliders2"
          android:thumbTint="@color/sliders2"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
   </LinearLayout>

   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="x3" />
      <SeekBar
          android:id="@+id/x3"
          android:max="100"
          android:progress="30"
          android:progressTint="@color/sliders3"
          android:thumbTint="@color/sliders3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
   </LinearLayout>

   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="y3" />
      <SeekBar
          android:id="@+id/y3"
          android:max="100"
          android:progress="90"
          android:progressTint="@color/sliders3"
          android:thumbTint="@color/sliders3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
   </LinearLayout>

   <LinearLayout
       android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="s3" />
      <SeekBar
          android:id="@+id/s3"
          android:max="100"
          android:progress="50"
          android:progressTint="@color/sliders3"
          android:thumbTint="@color/sliders3"
          android:layout_width="match_parent"
          android:layout_height="wrap_content" />
   </LinearLayout>

   <org.airella.btposition.activity.CanvasView
       android:id="@+id/canvas"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" />

</LinearLayout>